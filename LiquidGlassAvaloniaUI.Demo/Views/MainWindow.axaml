<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:LiquidGlassAvaloniaUI"
        xmlns:vm="using:AvaloniaApplication1.ViewModels"
        x:Class="AvaloniaApplication1.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="LiquidGlassAvaloniaUI Demo"
        Width="1200"
        Height="800"
        Background="#FF0B0C10">

	    <Grid>
	        <Image Source="avares://LiquidGlassAvaloniaUI.Demo/Assets/Wallpaper.png"
	               Stretch="UniformToFill"
	               Opacity="1"
	               IsVisible="{Binding UseWallpaperBackground}" />
	        <Image Source="avares://LiquidGlassAvaloniaUI.Demo/Assets/background.jpg"
	               Stretch="UniformToFill"
	               Opacity="1"
	               IsVisible="{Binding UsePhotoBackground}" />
	        <Border IsVisible="{Binding UseDistortionBackground}">
	            <Border.Background>
	                <VisualBrush TileMode="Tile"
	                             Stretch="Fill"
	                             AlignmentX="Left"
	                             AlignmentY="Top"
	                             DestinationRect="0,0,240,240">
	                    <VisualBrush.Visual>
	                        <Grid Width="240"
	                              Height="240">
	                            <Rectangle>
	                                <Rectangle.Fill>
	                                    <LinearGradientBrush StartPoint="0,0"
	                                                         EndPoint="1,1">
	                                        <GradientStop Color="#FF001DFF"
	                                                      Offset="0" />
	                                        <GradientStop Color="#FFFF007A"
	                                                      Offset="0.52" />
	                                        <GradientStop Color="#FFFF8D28"
	                                                      Offset="1" />
	                                    </LinearGradientBrush>
	                                </Rectangle.Fill>
	                            </Rectangle>
	                            <Rectangle Fill="#FF0B0C10"
	                                       Opacity="0.45" />

	                            <Path Data="M0 60 H240 M0 120 H240 M0 180 H240 M60 0 V240 M120 0 V240 M180 0 V240"
	                                  Stroke="#80FFFFFF"
	                                  StrokeThickness="1" />
	                            <Path Data="M0 120 H240 M120 0 V240"
	                                  Stroke="#E6FFFFFF"
	                                  StrokeThickness="2" />
	                            <Path Data="M0 0 L240 240 M240 0 L0 240"
	                                  Stroke="#40FFFFFF"
	                                  StrokeThickness="1" />

	                            <Ellipse Width="24"
	                                     Height="24"
	                                     Fill="#FF00E5FF"
	                                     HorizontalAlignment="Left"
	                                     VerticalAlignment="Top"
	                                     Margin="18" />
	                            <Ellipse Width="24"
	                                     Height="24"
	                                     Fill="#FFFF007A"
	                                     HorizontalAlignment="Right"
	                                     VerticalAlignment="Top"
	                                     Margin="18" />
	                            <Ellipse Width="24"
	                                     Height="24"
	                                     Fill="#FFFF8D28"
	                                     HorizontalAlignment="Left"
	                                     VerticalAlignment="Bottom"
	                                     Margin="18" />
	                            <Ellipse Width="24"
	                                     Height="24"
	                                     Fill="#FF00C8A0"
	                                     HorizontalAlignment="Right"
	                                     VerticalAlignment="Bottom"
	                                     Margin="18" />

	                            <TextBlock Text="DISTORTION"
	                                       FontSize="24"
	                                       FontWeight="Black"
	                                       Foreground="#2AFFFFFF"
	                                       HorizontalAlignment="Center"
	                                       VerticalAlignment="Center" />
	                        </Grid>
	                    </VisualBrush.Visual>
	                </VisualBrush>
	            </Border.Background>
	        </Border>

	        <!-- Add color + contrast so the glass distortion reads clearly (less “grey wash”). -->
	        <Canvas IsHitTestVisible="False"
	                IsVisible="{Binding ShowColorGlows}">
	            <TextBlock Text="LIQUID"
	                       FontSize="180"
	                       FontWeight="Black"
	                       Foreground="#18FFFFFF"
	                       Canvas.Left="28"
	                       Canvas.Top="40" />
	            <TextBlock Text="GLASS"
	                       FontSize="180"
	                       FontWeight="Black"
	                       Foreground="#12FFFFFF"
	                       Canvas.Left="28"
	                       Canvas.Top="190" />

	            <Ellipse Width="760"
	                     Height="760"
	                     Canvas.Left="-260"
	                     Canvas.Top="-320">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.35,0.35"
                                         GradientOrigin="0.35,0.35"
                                         RadiusX="90%"
                                         RadiusY="90%">
                        <GradientStop Color="#B30091FF"
                                      Offset="0" />
                        <GradientStop Color="#000091FF"
                                      Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="820"
                     Height="820"
                     Canvas.Left="640"
                     Canvas.Top="140">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.6,0.4"
                                         GradientOrigin="0.6,0.4"
                                         RadiusX="95%"
                                         RadiusY="95%">
                        <GradientStop Color="#A0FF007A"
                                      Offset="0" />
                        <GradientStop Color="#00FF007A"
                                      Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="620"
                     Height="620"
                     Canvas.Left="40"
                     Canvas.Top="520">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.4,0.4"
                                         GradientOrigin="0.4,0.4"
                                         RadiusX="90%"
                                         RadiusY="90%">
                        <GradientStop Color="#90FF8D28"
                                      Offset="0" />
                        <GradientStop Color="#00FF8D28"
                                      Offset="1" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Soft vignette for text legibility without flattening colors. -->
        <Rectangle IsVisible="{Binding ShowVignette}">
            <Rectangle.Fill>
                <RadialGradientBrush Center="0.5,0.4"
                                     GradientOrigin="0.5,0.4"
                                     RadiusX="95%"
                                     RadiusY="95%">
                    <GradientStop Color="#00000000"
                                  Offset="0" />
                    <GradientStop Color="#4D000000"
                                  Offset="1" />
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Margin="24"
              ColumnDefinitions="*,360"
              RowDefinitions="Auto,*"
              ColumnSpacing="20"
              RowSpacing="16">

            <StackPanel Grid.ColumnSpan="2" Spacing="4">
                <TextBlock Text="LiquidGlassAvaloniaUI"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="Pipeline: shadow → color → blur → lens → gamma → surface → highlight"
                           FontSize="12"
                           Foreground="#CCFFFFFF" />
            </StackPanel>

            <!-- Preview -->
            <ScrollViewer Grid.Row="1"
                          Grid.Column="0"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center"
                            Spacing="20"
                            Margin="0,12,0,24">

                    <local:LiquidGlassSurface x:Name="MainGlass"
                                              Width="520"
                                              Height="340"
                                              CornerRadius="36"
                                              BackdropZoom="{Binding BackdropZoom}"
                                              BackdropOffset="{Binding BackdropOffset}"
                                              RefractionHeight="{Binding RefractionHeight}"
                                              RefractionAmount="{Binding RefractionAmount}"
                                              DepthEffect="{Binding DepthEffect}"
                                              ChromaticAberration="{Binding ChromaticAberration}"
                                              BlurRadius="{Binding BlurRadius}"
                                              Vibrancy="{Binding Vibrancy}"
                                              Brightness="{Binding Brightness}"
                                              Contrast="{Binding Contrast}"
                                              ExposureEv="{Binding ExposureEv}"
                                              GammaPower="{Binding GammaPower}"
                                              BackdropOpacity="{Binding BackdropOpacity}"
                                              TintColor="{Binding TintColor}"
                                              SurfaceColor="{Binding SurfaceColor}"
                                              ProgressiveBlurEnabled="{Binding ProgressiveBlurEnabled}"
                                              ProgressiveBlurStart="{Binding ProgressiveBlurStart}"
                                              ProgressiveBlurEnd="{Binding ProgressiveBlurEnd}"
                                              ProgressiveTintColor="{Binding ProgressiveTintColor}"
                                              ProgressiveTintIntensity="{Binding ProgressiveTintIntensity}"
                                              AdaptiveLuminanceEnabled="{Binding AdaptiveLuminanceEnabled}"
                                              AdaptiveLuminanceUpdateIntervalMs="{Binding AdaptiveLuminanceUpdateIntervalMs}"
                                              AdaptiveLuminanceSmoothing="{Binding AdaptiveLuminanceSmoothing}"
                                              HighlightEnabled="{Binding HighlightEnabled}"
                                              HighlightWidth="{Binding HighlightWidth}"
                                              HighlightBlurRadius="{Binding HighlightBlurRadius}"
                                              HighlightOpacity="{Binding HighlightOpacity}"
                                              HighlightAngle="{Binding HighlightAngle}"
                                              HighlightFalloff="{Binding HighlightFalloff}"
                                              ShadowEnabled="{Binding ShadowEnabled}"
                                              ShadowRadius="{Binding ShadowRadius}"
                                              ShadowOffset="{Binding ShadowOffset}"
                                              ShadowColor="{Binding ShadowColor}"
                                              ShadowOpacity="{Binding ShadowOpacity}"
                                              InnerShadowEnabled="{Binding InnerShadowEnabled}"
                                              InnerShadowRadius="{Binding InnerShadowRadius}"
                                              InnerShadowOffset="{Binding InnerShadowOffset}"
                                              InnerShadowColor="{Binding InnerShadowColor}"
                                              InnerShadowOpacity="{Binding InnerShadowOpacity}">
                        <Grid Margin="22"
                              RowDefinitions="Auto,Auto,*,Auto"
                              ColumnDefinitions="*,Auto"
                              RowSpacing="10">
                            <TextBlock Text="Liquid Glass Surface"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White" />

                            <Border Grid.Row="0"
                                    Grid.Column="1"
                                    CornerRadius="999"
                                    Background="#30FFFFFF"
                                    Padding="10,6">
                                <TextBlock Text="Live"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="White" />
                            </Border>

                            <TextBlock Grid.Row="1"
                                       Grid.ColumnSpan="2"
                                       Text="Tune parameters on the right to match your target look."
                                       FontSize="12"
                                       Foreground="#CCFFFFFF" />

                            <StackPanel Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Spacing="12">
                                <Border Height="52"
                                        CornerRadius="16"
                                        Background="#22FFFFFF">
                                    <Grid ColumnDefinitions="Auto,*"
                                          Margin="14,10">
                                        <Border Width="28"
                                                Height="28"
                                                CornerRadius="8"
                                                Background="#30FFFFFF" />
                                        <StackPanel Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                                            <TextBlock Text="Preview content"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="White" />
                                            <TextBlock Text="Backdrop should refract near edges and stay crisp inside."
                                                       FontSize="11"
                                                       Foreground="#B3FFFFFF" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Height="52"
                                        CornerRadius="16"
                                        Background="#18FFFFFF">
                                    <Grid ColumnDefinitions="Auto,*"
                                          Margin="14,10">
                                        <Border Width="28"
                                                Height="28"
                                                CornerRadius="8"
                                                Background="#2AFFFFFF" />
                                        <StackPanel Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                                            <TextBlock Text="Tint + surface overlays"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="White" />
                                            <TextBlock Text="Hue blend + alpha fill (tint), plus optional surface color."
                                                       FontSize="11"
                                                       Foreground="#B3FFFFFF" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="3"
                                        Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        Spacing="10"
                                        HorizontalAlignment="Center">
                                <local:LiquidGlassInteractiveSurface Width="160"
                                                                     Height="48"
                                                                     CornerRadius="999"
                                                                     RefractionHeight="{Binding RefractionHeight}"
                                                                     RefractionAmount="{Binding RefractionAmount}"
                                                                     DepthEffect="{Binding DepthEffect}"
                                                                     ChromaticAberration="{Binding ChromaticAberration}"
                                                                     BlurRadius="{Binding BlurRadius}"
                                                                     Vibrancy="{Binding Vibrancy}"
                                                                     Brightness="{Binding Brightness}"
                                                                     Contrast="{Binding Contrast}"
                                                                     ExposureEv="{Binding ExposureEv}"
                                                                     GammaPower="{Binding GammaPower}"
                                                                     BackdropOpacity="{Binding BackdropOpacity}"
                                                                     TintColor="{Binding TintColor}"
                                                                     SurfaceColor="{Binding SurfaceColor}"
                                                                     HighlightEnabled="{Binding HighlightEnabled}"
                                                                     HighlightWidth="{Binding HighlightWidth}"
                                                                     HighlightBlurRadius="{Binding HighlightBlurRadius}"
                                                                     HighlightOpacity="{Binding HighlightOpacity}"
                                                                     HighlightAngle="{Binding HighlightAngle}"
                                                                     HighlightFalloff="{Binding HighlightFalloff}"
                                                                     ShadowEnabled="{Binding ShadowEnabled}"
                                                                     ShadowRadius="{Binding ShadowRadius}"
                                                                     ShadowOffset="{Binding ShadowOffset}"
                                                                     ShadowColor="{Binding ShadowColor}"
                                                                     ShadowOpacity="{Binding ShadowOpacity}"
                                                                     InnerShadowEnabled="{Binding InnerShadowEnabled}"
                                                                     InnerShadowRadius="{Binding InnerShadowRadius}"
                                                                     InnerShadowOffset="{Binding InnerShadowOffset}"
                                                                     InnerShadowColor="{Binding InnerShadowColor}"
                                                                     InnerShadowOpacity="{Binding InnerShadowOpacity}"
                                                                     IsInteractive="{Binding IsInteractive}"
                                                                     InteractiveHighlightEnabled="{Binding InteractiveHighlightEnabled}"
                                                                     InteractiveMaxScaleDip="{Binding InteractiveMaxScaleDip}">
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            Padding="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Click="OnPrimaryLiquidButtonClick">
                                        <TextBlock Text="Liquid Button"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="White" />
                                    </Button>
                                </local:LiquidGlassInteractiveSurface>

                                <local:LiquidGlassInteractiveSurface Width="160"
                                                                     Height="48"
                                                                     CornerRadius="999"
                                                                     RefractionHeight="{Binding RefractionHeight}"
                                                                     RefractionAmount="{Binding RefractionAmount}"
                                                                     DepthEffect="{Binding DepthEffect}"
                                                                     ChromaticAberration="{Binding ChromaticAberration}"
                                                                     BlurRadius="{Binding BlurRadius}"
                                                                     Vibrancy="{Binding Vibrancy}"
                                                                     Brightness="{Binding Brightness}"
                                                                     Contrast="{Binding Contrast}"
                                                                     ExposureEv="{Binding ExposureEv}"
                                                                     GammaPower="{Binding GammaPower}"
                                                                     BackdropOpacity="{Binding BackdropOpacity}"
                                                                     TintColor="{Binding TintColor}"
                                                                     SurfaceColor="{Binding SurfaceColor}"
                                                                     HighlightEnabled="{Binding HighlightEnabled}"
                                                                     HighlightWidth="{Binding HighlightWidth}"
                                                                     HighlightBlurRadius="{Binding HighlightBlurRadius}"
                                                                     HighlightOpacity="{Binding HighlightOpacity}"
                                                                     HighlightAngle="{Binding HighlightAngle}"
                                                                     HighlightFalloff="{Binding HighlightFalloff}"
                                                                     ShadowEnabled="{Binding ShadowEnabled}"
                                                                     ShadowRadius="{Binding ShadowRadius}"
                                                                     ShadowOffset="{Binding ShadowOffset}"
                                                                     ShadowColor="{Binding ShadowColor}"
                                                                     ShadowOpacity="{Binding ShadowOpacity}"
                                                                     InnerShadowEnabled="{Binding InnerShadowEnabled}"
                                                                     InnerShadowRadius="{Binding InnerShadowRadius}"
                                                                     InnerShadowOffset="{Binding InnerShadowOffset}"
                                                                     InnerShadowColor="{Binding InnerShadowColor}"
                                                                     InnerShadowOpacity="{Binding InnerShadowOpacity}"
                                                                     IsInteractive="{Binding IsInteractive}"
                                                                     InteractiveHighlightEnabled="{Binding InteractiveHighlightEnabled}"
                                                                     InteractiveMaxScaleDip="{Binding InteractiveMaxScaleDip}">
                                    <Button Background="Transparent"
                                            BorderThickness="0"
                                            Padding="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Click="OnSecondaryLiquidButtonClick">
                                        <TextBlock Text="Secondary"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="White" />
                                    </Button>
                                </local:LiquidGlassInteractiveSurface>
                            </StackPanel>
                        </Grid>
                    </local:LiquidGlassSurface>

                    <Border Background="#1AFFFFFF"
                            CornerRadius="14"
                            Padding="14">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Defaults"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White" />
                            <TextBlock Text="Vibrancy=1.5 · Blur=2 · Lens=12/24 · Shadow=24@(0,4) · Highlight=0.5/0.25@45°"
                                       FontSize="11"
                                       Foreground="#B3FFFFFF"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

	            <!-- Controls -->
	            <local:LiquidGlassSurface Grid.Row="1"
	                                      Grid.Column="1"
	                                      CornerRadius="18"
	                                      RefractionHeight="0"
	                                      RefractionAmount="0"
	                                      BlurRadius="18"
	                                      Vibrancy="1.2"
	                                      Brightness="0.08"
	                                      Contrast="1"
	                                      ExposureEv="0"
	                                      GammaPower="1"
	                                      BackdropOpacity="0.92"
	                                      SurfaceColor="#10000000"
	                                      HighlightEnabled="True"
	                                      HighlightWidth="0.35"
	                                      HighlightBlurRadius="0.35"
	                                      HighlightOpacity="0.35"
	                                      HighlightAngle="60"
	                                      HighlightFalloff="1.2"
	                                      ShadowEnabled="True"
	                                      ShadowRadius="26"
	                                      ShadowOffset="0,10"
	                                      ShadowColor="#66000000"
	                                      ShadowOpacity="1">
	                <ScrollViewer Padding="16"
	                              HorizontalScrollBarVisibility="Disabled"
	                              VerticalScrollBarVisibility="Auto">
	                    <StackPanel Spacing="12">
	                        <TextBlock Text="Controls"
	                                   FontSize="16"
	                                   FontWeight="Bold"
	                                   Foreground="White" />

	                        <Border Background="#12FFFFFF"
	                                CornerRadius="12"
	                                Padding="12">
	                            <StackPanel Spacing="10">
	                                <TextBlock Text="Presets"
	                                           FontSize="13"
	                                           FontWeight="SemiBold"
	                                           Foreground="White" />
		                                <WrapPanel ItemSpacing="8" LineSpacing="8">
		                                    <Button Content="Showcase"
		                                            Click="OnPresetShowcaseClick" />
			                                    <Button Content="Defaults"
			                                            Click="OnPresetDefaultsClick" />
		                                    <Button Content="Magnifier"
		                                            Click="OnPresetMagnifierClick" />
		                                    <Button Content="Distortion"
		                                            Click="OnPresetDistortionClick" />
		                                    <Button Content="Progressive"
		                                            Click="OnPresetProgressiveClick" />
		                                    <Button Content="Adaptive"
		                                            Click="OnPresetAdaptiveClick" />
		                                </WrapPanel>
	                            </StackPanel>
	                        </Border>

	                        <Border Background="#12FFFFFF"
	                                CornerRadius="12"
	                                Padding="12">
	                            <StackPanel Spacing="10">
	                                <TextBlock Text="Scene"
	                                           FontSize="13"
	                                           FontWeight="SemiBold"
	                                           Foreground="White" />
		                                <ComboBox SelectedIndex="{Binding BackgroundIndex}"
		                                          Width="220">
		                                    <ComboBoxItem Content="Wallpaper" />
		                                    <ComboBoxItem Content="Photo" />
		                                    <ComboBoxItem Content="Distortion (通透)" />
		                                </ComboBox>
		                                <StackPanel Orientation="Horizontal" Spacing="14">
		                                    <CheckBox Content="Glows"
		                                              IsChecked="{Binding ShowColorGlows}"
		                                              Foreground="White" />
	                                    <CheckBox Content="Vignette"
	                                              IsChecked="{Binding ShowVignette}"
	                                              Foreground="White" />
	                                </StackPanel>
	                            </StackPanel>
	                        </Border>

	                        <Grid ColumnDefinitions="150,*,70"
	                              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
	                              RowSpacing="10"
                              ColumnSpacing="10">
                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="RefractionHeight"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="0"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="30"
                                    Value="{Binding RefractionHeight}" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="2"
                                       Text="{Binding RefractionHeight, StringFormat='{}{0:F1}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="RefractionAmount"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="1"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="60"
                                    Value="{Binding RefractionAmount}" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       Text="{Binding RefractionAmount, StringFormat='{}{0:F0}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Blur"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="2"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="32"
                                    Value="{Binding BlurRadius}" />
                            <TextBlock Grid.Row="2"
                                       Grid.Column="2"
                                       Text="{Binding BlurRadius, StringFormat='{}{0:F1}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       Text="Saturation"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="3"
                                    Grid.Column="1"
                                    Minimum="0.5"
                                    Maximum="2.5"
                                    Value="{Binding Vibrancy}" />
                            <TextBlock Grid.Row="3"
                                       Grid.Column="2"
                                       Text="{Binding Vibrancy, StringFormat='{}{0:F2}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="4"
                                       Grid.Column="0"
                                       Text="Brightness"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="4"
                                    Grid.Column="1"
                                    Minimum="-0.5"
                                    Maximum="0.5"
                                    Value="{Binding Brightness}" />
                            <TextBlock Grid.Row="4"
                                       Grid.Column="2"
                                       Text="{Binding Brightness, StringFormat='{}{0:F2}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="5"
                                       Grid.Column="0"
                                       Text="Contrast"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="5"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="2"
                                    Value="{Binding Contrast}" />
                            <TextBlock Grid.Row="5"
                                       Grid.Column="2"
                                       Text="{Binding Contrast, StringFormat='{}{0:F2}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="6"
                                       Grid.Column="0"
                                       Text="Exposure (EV)"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="6"
                                    Grid.Column="1"
                                    Minimum="-2"
                                    Maximum="2"
                                    Value="{Binding ExposureEv}" />
                            <TextBlock Grid.Row="6"
                                       Grid.Column="2"
                                       Text="{Binding ExposureEv, StringFormat='{}{0:F2}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="7"
                                       Grid.Column="0"
                                       Text="Gamma"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="7"
                                    Grid.Column="1"
                                    Minimum="0.5"
                                    Maximum="2.5"
                                    Value="{Binding GammaPower}" />
                            <TextBlock Grid.Row="7"
                                       Grid.Column="2"
                                       Text="{Binding GammaPower, StringFormat='{}{0:F2}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />

                            <TextBlock Grid.Row="8"
                                       Grid.Column="0"
                                       Text="BackdropOpacity"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Row="8"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="1"
                                    Value="{Binding BackdropOpacity}" />
                            <TextBlock Grid.Row="8"
                                       Grid.Column="2"
                                       Text="{Binding BackdropOpacity, StringFormat='{}{0:F2}'}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right" />
                        </Grid>

	                        <StackPanel Spacing="8">
	                            <CheckBox Content="DepthEffect"
	                                      IsChecked="{Binding DepthEffect}"
	                                      Foreground="White" />
	                            <CheckBox Content="ChromaticAberration"
	                                      IsChecked="{Binding ChromaticAberration}"
	                                      Foreground="White" />
	                        </StackPanel>

	                        <Border Background="#26FFFFFF"
	                                CornerRadius="12"
	                                Padding="12">
	                            <StackPanel Spacing="10">
	                                <TextBlock Text="Backdrop Transform (Magnifier)"
	                                           FontSize="13"
	                                           FontWeight="SemiBold"
	                                           Foreground="White" />

	                                <Grid ColumnDefinitions="120,*,70"
	                                      RowDefinitions="Auto,Auto,Auto"
	                                      ColumnSpacing="10"
	                                      RowSpacing="10">
	                                    <TextBlock Grid.Row="0"
	                                               Grid.Column="0"
	                                               Text="Zoom"
	                                               Foreground="White"
	                                               VerticalAlignment="Center" />
	                                    <Slider Grid.Row="0"
	                                            Grid.Column="1"
	                                            Minimum="0.5"
	                                            Maximum="3"
	                                            Value="{Binding BackdropZoom}" />
	                                    <TextBlock Grid.Row="0"
	                                               Grid.Column="2"
	                                               Text="{Binding BackdropZoom, StringFormat='{}{0:F2}'}"
	                                               Foreground="White"
	                                               VerticalAlignment="Center"
